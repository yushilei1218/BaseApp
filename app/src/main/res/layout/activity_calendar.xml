<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.shileiyu.baseapp.ui.calendar.CalendarActivity">

    <com.shileiyu.baseapp.common.widget.PathTextView
        android:id="@+id/path_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="26sp"
        android:text="你好"/>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/act_calendar_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_arrowColor="#ff8f8f"
        app:mcv_selectionColor="#6bff75"
        app:mcv_showOtherDates="all"
        app:mcv_tileSize="48dp"/>
</LinearLayout>
