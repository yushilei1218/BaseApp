<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.shileiyu.baseapp.ui.viewmodel.ViewModelActivity">

    <TextView
        android:id="@+id/act_view_model_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff4c4c"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/act_view_model_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity get"/>

    <FrameLayout
        android:id="@+id/act_view_model_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
